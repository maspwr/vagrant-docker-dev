# Create simple SSH container as described in https://docs.docker.com/examples/running_ssh_service/.
FROM ubuntu:14.04

# Install the openssh-server so that we
RUN apt-get update && apt-get install -y openssh-server

RUN mkdir /var/run/sshd
RUN echo 'root:screencast' | chpasswd
RUN sed -i 's/PermitRootLogin without-password/PermitRootLogin yes/' /etc/ssh/sshd_config

# SSH login fix. Otherwise user is kicked off after login
RUN sed 's@session\s*required\s*pam_loginuid.so@session optional pam_loginuid.so@g' -i /etc/pam.d/sshd

ENV NOTVISIBLE "in users profile"
RUN echo "export VISIBLE=now" >> /etc/profile

# Create vagrant user and add Vagrant insecure public key
RUN useradd -m -p vagrant -s /bin/bash vagrant
RUN mkdir /home/vagrant/.ssh
RUN echo 'ssh-rsa  vagrant insecure public key' > /home/vagrant/.ssh/authorized_keys

# Grant passwordless sudo to vagrant user
RUN echo 'vagrant ALL=(ALL) NOPASSWD:ALL' > /etc/sudoers.d/vagrant

# Expose and run sshd.
EXPOSE 22
CMD ["/usr/sbin/sshd", "-D"]
